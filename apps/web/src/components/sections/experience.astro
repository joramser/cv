---
import { data } from "@cv/data";
import { ExternalLinkIcon } from "@lucide/astro";
import Section from "@web/components/ui/section.astro";
import SectionBody from "@web/components/ui/section-body.astro";
import SectionTitle from "@web/components/ui/section-title.astro";
---

<Section class="break-after-page">
  <SectionTitle href="#experience">Experience</SectionTitle>
  <SectionBody>
    {
      data.experience.map((item) => (
        <div>
          <div class="flex flex-col gap-1 font-mono sm:flex-row sm:items-start sm:justify-between sm:gap-4">
            <div class="flex-1">
              <a
                href={item.website}
                target="_blank"
                rel="noopener noreferrer"
                class="flex items-center gap-1 hover:underline"
              >
                <h3 class="text-title text-lg font-bold">{item.company}</h3>
                {item.website && <ExternalLinkIcon class="print:hidden" size="14" />}
              </a>
              <p class="text-md font-bold">{item.title}</p>
            </div>
            <p class="text-sm sm:shrink-0 sm:text-base">
              {item.startYear} - {item.endYear ?? "Present"}
            </p>
          </div>
          {item.highlights && (
            <ul class="mt-2 space-y-1 text-sm">
              {item.highlights.map((highlight) => (
                <li class="flex items-start">
                  <span class="text-muted mr-2">â€¢</span>
                  <span>{highlight}</span>
                </li>
              ))}
            </ul>
          )}
        </div>
      ))
    }
  </SectionBody>
</Section>

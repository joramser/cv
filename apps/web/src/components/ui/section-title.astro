---
export interface Props {
  href?: string;
  class?: string;
}

const { href, class: className, ...props } = Astro.props;
---

{
  href ? (
    <a href={href}>
      <h2 class:list={["text-title font-mono text-xl font-bold", className]} {...props}>
        <slot />
      </h2>
    </a>
  ) : (
    <h2 class:list={["text-title font-mono text-xl font-bold", className]} {...props}>
      <slot />
    </h2>
  )
}
